<h1>Party</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Starttime</th>
            <td>{{ entity.startTime|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Endtime</th>
            <td>{{ entity.endTime|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_party') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_party_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_party_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
