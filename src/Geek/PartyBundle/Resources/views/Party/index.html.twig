{% extends 'GeekPartyBundle::parent.html.twig' %}

{% block title %} GeekParty :: Список пати {% endblock %}

{% block main %}

<h1>Party list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Starttime</th>
            <th>Endtime</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('party_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.startTime %}{{ entity.startTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.endTime %}{{ entity.endTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('party_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('party_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('party_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
