{% extends 'GeekPartyBundle::parent.html.twig' %}

{% block title %} GeekParty :: Список работ {% endblock %}

{% block main %}
<h1>Work list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Source</th>
            <th>Width</th>
            <th>Height</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_works', { 'action': 'edit', 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.source }}</td>
            <td>{{ entity.width }}</td>
            <td>{{ entity.height }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_works', { 'action': 'edit', 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_works', {'action': 'edit'}) }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
