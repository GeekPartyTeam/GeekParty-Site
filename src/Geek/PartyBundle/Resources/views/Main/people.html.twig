				<div id="content">
					<!--<div class="entryPadding">-->
						<div id="createTeam">
							{% if not is_granted('IS_AUTHENTICATED_FULLY') %}
								Чтобы создать команду, войдите через фейсбук: 
                                <script type="text/javascript">
                                    function fbSignIn() {
                                        FB.getLoginStatus(function (r) {
                                            if (r.status != 'connected') {
                                                FB.login()
                                            } else {
                                                goLogIn()
                                            }
                                        })
                                    }
                                </script>
                                <button class="btn" onclick="fbSignIn()"><i class="icon-fb"></i> Войти</button>
							{% else %}
								<p>
                                    Привет, {{ app.user.firstname }} {{ app.user.lastname }}
                                    <form class="form-inline" method="post" action="{{ path('fos_user_security_logout') }}">
                                        <input type="submit" class="btn" value="Выйти"/>
                                    </form>
								</p>
								{% if team %}
									<a href="{{ path('team_edit', {'id':team.id}) }}">Редактировать мою команду</a>
								{% else %}
									<a href="{{ path('team_new') }}">Создать команду</a>
								{% endif %}
							{% endif %}
						</div>
					
						<div id="participantsTable">
							<table id="participants" summary="test">
								<thead>
									<tr>
										<th>
											<p>Название</p>
										</th>
										<th>
											<p>Описание</p>
										</th>
										<th>
											<p>Контакты</p>
										</th>
										<th>
											<p>Состав</p>
										</th>
									</tr>
								</thead>
								<tbody>
								{% for team in teams %}
									<tr>
										<th>
											<p>{{ team.name }}</p>
										</th>
										<td>
											<p>{{ team.description }}</p>
										</td>
										<td>
											<p>{{ team.contacts }}</p>
										</td>
										<td>
											{% for member in team.members %}
                                            <p>{{ member.name }} &nbsp;:&nbsp; {{ member.description }}</p>
											{% endfor %}
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="7"><p>Пока никого нет</p></td>
									</tr>
								{% endfor %}
								</tbody>
