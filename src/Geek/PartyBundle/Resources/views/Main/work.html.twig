<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>{% block title %} GeekParty :: Просмотр работы {{ work.name }}  {% endblock %}</title>
    <meta name="keywords" content="geekparty" />
    <meta name="description" content="Гик-пати — это цифровое творчество в режиме реального времени" />
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script type="text/javascript" src="/js/countdown.js?2"></script>
	<script type="text/javascript" src="/js/jquery.animate-colors-min.js"></script>
	<script type="text/javascript" src="/js/jRating.jquery.js"></script>
	<script type="text/javascript" src="/js/jtweetsanywhere-de-1.3.1.min.js"></script>
    <script type="text/javascript" src="http://platform.twitter.com/anywhere.js?id=ZSO1guB57M6u0lm4cwqA&v=1"></script>
    <script type="text/javascript" src="/js/jquery.jslidery-0.1.0.js"></script>
    <script type="text/javascript" src="/js/jquery.jtweetsanywhere-1.3.1.min.js"></script>
    <script type="text/javascript" src="//vk.com/js/api/openapi.js?87"></script>
    <script type="text/javascript">
        VK.init({apiId: 3561840, onlyWidgets: true});
    </script>

    <link rel="stylesheet" type="text/css" href="/css/style.css?2" media="screen"/>
	<link rel="stylesheet" type="text/css" href="/css/disqusFix.css" media="screen"/>
	<link rel="stylesheet" type="text/css" href="/css/jRating.jquery.css" media="screen" />
	<link rel="stylesheet" type="text/css" media="all" href="/css/jquery.jtweetsanywhere-1.3.1.css" />

    <link rel="shortcut icon" href="/favicon.ico" />
</head>
<body>
	<div id="backgroundFX"></div>
	<div id="wrapperSingle">
		<div id="page">
			<div id="headerBorder"></div>
			<h2><a href="/works/{{ party }}">{{ party }}</a>&nbsp;&nbsp;/&nbsp;&nbsp;{{ work.name }}</h2>
			<div id="gameContainer">
				<div id="gameFrame" align="center" width="{{ work.width }}" height="{{ work.height }}">
					<iframe src="/works/{{ party }}/{{ work.id }}/index.html" width="{{ work.width }}" height="{{ work.height }}" scrolling="no" style="border: none;"></iframe>
				</div>
			</div>
	
			<div id="containerSingle">
				<div class="content">
					<div id="singleEntry">
						<div class="entryPadding borderBlock">
							<div class="entryDescription">
								<!--<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus venenatis dui a tortor rutrum sed facilisis velit volutpat. Cras cursus felis vel diam blandit rutrum.</p>-->
							</div>
							
                            <div class="socialContainerGame">
                                <div id="vk_like_game"></div>
                                <script type="text/javascript">
                                    VK.Widgets.Like("vk_like_game", {type:"button",pageImage:"http://geekparty.su/img/logo.png",text:"Игра на Гик-пати — {{ work.name }}"});
                                </script>
                                <div class="fb-like" data-send="false" data-layout="button_count" data-width="450" data-show-faces="true"></div>
                                <div class="socialTwitterButton">
                                    <a href="https://twitter.com/share" class="twitter-share-button" data-lang="ru" data-hashtags="geekpartyru" data-text="Игра на Гик-пати — {{ work.name }}">Tweet</a>
                                    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
                                </div>
                            </div>
							
							<div style="clear:both;"></div>
							<!-- DUSQUS -->
							<div id="disqus_thread"></div>
							<script type="text/javascript">
								/* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
								var disqus_shortname = 'geekparty'; // required: replace example with your forum shortname

								/* * * DON'T EDIT BELOW THIS LINE * * */
								(function() {
									var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
									dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
									(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
								})();
							</script>
							<noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
							<a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
							<!-- DUSQUS END-->
						</div>
					</div> <!-- singleEntry -->
				</div> <!-- content -->
				<div id="footer">
					<div id="footerDescription">
						<p class="usePixelFont">GEEK PARTY (c) 2013 | info@geekparty.ru</p>
					</div>
					<div id="footerBlock"></div>
				</div>
			</div> <!-- page -->
		</div> <!-- page -->
	</div> <!-- wrapperSingle -->
<script type="text/javascript" src="/js/less-1.3.3.min.js"></script>
