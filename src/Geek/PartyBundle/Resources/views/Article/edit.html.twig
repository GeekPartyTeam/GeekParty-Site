{% extends 'GeekPartyBundle::parent.html.twig' %}

{% import 'GeekPartyBundle::macros.html.twig' as macros %}

{% block title %} GeekParty :: Редактирование текстового блока {% endblock %}

{% block main %}
    <form action="{{ path('_edit_article', { 'action': 'update', 'id': entity.id }) }}" method="post" {{ form_enctype
    (edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            {{ macros.submit("Сохранить") }}
        </p>
    </form>
    {% if delete_form is defined %}
        <form action="{{ path('_edit_article', {'action':'delete', 'id': entity.id}) }}">
            {{ form_widget(delete_form) }}
            <p>
                <input class="inlineBlock" id="deleteTeamWithH" type="submit" value="Удалить"/>
            </p>
        </form>
    {% endif %}

    <ul class="record_actions">
        <li>
            <a href="{{ path('geek_index') }}">
                &larr; Назад
            </a>
        </li>
    </ul>

    {{ tinymce_init() }}
{% endblock %}
