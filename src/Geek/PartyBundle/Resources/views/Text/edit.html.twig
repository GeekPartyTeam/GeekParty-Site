{% extends 'GeekPartyBundle::parent.html.twig' %}

{% block title %} GeekParty :: Редактирование текстового блока {% endblock %}

{% block main %}
<form action="{{ path('admin_text', { 'action': 'update', 'id': entity.id }) }}" method="post" {{ form_enctype
(edit_form) }}>
    {{ form_errors(edit_form) }}
    <div style="display:none">{{ form_row(edit_form.name) }}</div>
    {{ form_row(edit_form.body) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin') }}">
            Back to the list
        </a>
    </li>
</ul>

{{ tinymce_init() }}
{% endblock %}
