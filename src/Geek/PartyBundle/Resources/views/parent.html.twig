<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>{% block title %} GeekParty {% endblock %}</title>
    <meta name="keywords" content="geekparty" />
    <meta name="description" content="Гик-пати — это цифровое творчество в режиме реального времени" />
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script type="text/javascript" src="/js/countdown.js?3"></script>
	<script type="text/javascript" src="/js/jquery.animate-colors-min.js"></script>
	<script type="text/javascript" src="/js/jRating.jquery.js"></script>
	<script type="text/javascript" src="/js/jtweetsanywhere-de-1.3.1.min.js"></script>
    <script type="text/javascript" src="http://platform.twitter.com/anywhere.js?id=ZSO1guB57M6u0lm4cwqA&v=1"></script>
    <script type="text/javascript" src="/js/jquery.jslidery-0.1.0.js"></script>
    <script type="text/javascript" src="/js/jquery.jtweetsanywhere-1.3.1.min.js"></script>
    <script type="text/javascript" src="//vk.com/js/api/openapi.js?87"></script>
    <script type="text/javascript">
        VK.init({apiId: 3561840, onlyWidgets: true});
    </script>

    <link rel="stylesheet" type="text/css" href="/css/style.css?2" media="screen"/>
	<link rel="stylesheet" type="text/css" href="/css/disqusFix.css" media="screen"/>
	<link rel="stylesheet" type="text/css" href="/css/jRating.jquery.css" media="screen" />
	<link rel="stylesheet" type="text/css" media="all" href="/css/jquery.jtweetsanywhere-1.3.1.css" />

    <link rel="shortcut icon" href="/favicon.ico" />
</head>
<body>
    <script>
        function goLogIn(){
            window.location.href = "{{ path('_security_check') }}";
        }

        function onFbInit() {
            if (typeof(FB) != 'undefined' && FB != null ) {              
                FB.Event.subscribe('auth.statusChange', function(response) {
                    if (response.session || response.authResponse) {
                        setTimeout(goLogIn, 500);
                    } else {
                        window.location.href = "{{ path('_security_logout') }}";
                    }
                });
            }
        }
    </script>
    {{ facebook_initialize({'xfbml': true, 'fbAsyncInit': 'onFbInit();'}) }}
	<div id="backgroundFX"></div>
	<div id="wrapper">
		<div id="sidebar">
			<div id="sidebarFX"></div>
			<ul id="navigation">
				<li{% if app.request.requestUri == '/' %} class="navActive"{% endif %}><a href="/">Main</a></li>
				<li{% if app.request.requestUri == '/people' %} class="navActive"{% endif %}><a href="{{ path('geek_people') }}">People</a></li>
				<li{% if app.request.requestUri == '/about' %} class="navActive"{% endif %}><a href="/about">About</a></li>
				<li{% if '/works' in app.request.requestUri  %} class="navActive"{% endif %}><a href="{{ path('geek_works') }}">Works</a></li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li{% if '/admin' in app.request.requestUri  %} class="navActive"{% endif %}><a href="{{ path('party') }}">Party</a></li>
                {% endif %}
			</ul>
		</div>
		
		<div id="container">
			<div id="header">
				<div id="sitelogo">
					<a href="/">
						<img src="/img/logo.png" alt="sdsd" />
					</a>
				</div>
				<div id="timer" class="{% if current_party and current_party.startTime|date('Y-m-d H:i:s') < 'now'|date('Y-m-d H:i:s') %}showtime{%endif%}">
                    {% if current_party.endTime|date('Y-m-d H:i:s') < 'now'|date('Y-m-d H:i:s') %}
                        {# Последнее пати закончилось #}
                        <p class="timerLabel showtime">{{ current_party.name }} состоялось!</p>
                    {% elseif current_party.endTime|date('Y-m-d H:i:s') > 'now'|date('Y-m-d H:i:s') %}
                        {# Пати еще не началось или еще не закончилось #}
                        {% if current_party.startTime|date('Y-m-d H:i:s') < 'now'|date('Y-m-d H:i:s') %}
                            <!--<p class="timerLabel">Гикпати началось!</p>-->
                        {% else %}
                            <!--<p class="timerLabel">{{current_party.name}} начнется через:</p>-->
                        {% endif %}
                        <script>
                            window.targetDate = {% if current_party.startTime|date('Y-m-d H:i:s') > 'now'|date('Y-m-d H:i:s') %}
                                    "{{ current_party.startTime|date('Y-m-d H:i:s') }}"
                                {% else %}
                                    "{{ current_party.endTime|date('Y-m-d H:i:s') }}"
                                {% endif %};
                        </script>
                        <p id="days" class="timerLabel">01</p>
                        <p id="dhColon" class="timerLabel">:</p>
                        <p id="hours" class="timerLabel">08</p>
                        <p id="hmColon" class="timerLabel">:</p>
                        <p id="minutes" class="timerLabel">23</p>
                    {% endif %}
				</div>
                <div class="socialContainer">
                    <div id="vk_like"></div>
                    <script type="text/javascript">
                        VK.Widgets.Like("vk_like", {type:"button",pageImage:"http://geekparty.su/img/logo.png",pageUrl:"http://geekparty.ru/",text:"Гикпати.Ру - хорошее мерориятие"});
                    </script>
                    <div class="fb-like" data-href="http://geekparty.ru/" data-send="false" data-layout="button_count" data-width="450" data-show-faces="true"></div>
                    <div class="socialTwitterButton">
                        <a href="https://twitter.com/share" class="twitter-share-button" data-lang="ru" data-hashtags="geekpartyru" data-url="http://geekparty.ru/" data-text="Гикпати.Ру — хорошее мерориятие">Tweet</a>
                        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
                    </div>
                </div>
				<div id="account">
					<div id="accountLogin">
                    {#
						<form class="loginForm" action="" method="">
							<p class="inputBg"><input id="_login" class="usePixelFont" name="value1" type="text" value="Geeklogin" /></p>
							<p class="inputBg"><input id="_password" class="usePixelFont" name="value2" type="text" value="Password" /></p>
						</form>
                    #}
					</div>
					<div id="accountActions">
                    {#
						<div class="usePixelFont">
							<a id="doLogin" class="fRight" href="">Login</a>
							<span id="separator" class="fRight">&nbsp;&nbsp;|&nbsp;&nbsp;</span>
							<a id="doRegister" class="fRight" href="">Register</a>
						</div>
						<div>
							<a id="doForget" class="fRight" href="">Забыли пароль?</a>
						</div>
                    #}
					</div>
				</div>
			</div>
			<div id="headerBorder"></div>
			<div id="page">
				{% block main %} {% endblock %}
				<div id="footer">
					<div id="footerDescription">
						<p class="usePixelFont">GEEK PARTY (c) 2013 | info@geekparty.ru</p>
					</div>
					<div id="footerBlock"></div>
				</div>
			</div> <!-- page -->
		</div> <!-- containert -->
	</div> <!-- wrapper -->

